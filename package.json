{
  "name": "viber-integration-layer",
  "version": "1.0.0",
  "description": "Robust integration layer for Viber project with standardized APIs and resilience patterns",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "ci": "npm run typecheck && npm run lint && npm run test:ci",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "integration",
    "api",
    "resilience"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vercel/node": "^3.2.0",
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.90.0",
    "uuid": "^13.0.0"
  }
}
