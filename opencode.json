{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "default": "CMZ"
  },
  "agents": {
    "CMZ": {
      "model": "opencode/kimi-k2.5-free",
      "temperature": 0.7,
      "skills": [
        "self-diagnosis",
        "pattern-learning",
        "auto-refactor",
        "meta-cognition",
        "optimization"
      ]
    },
    "BugLover": {
      "model": "opencode/glm-4.7-free",
      "temperature": 0.3,
      "skills": ["code-analysis", "debugging", "testing", "error-patterns"]
    },
    "Sisyphus": {
      "model": "opencode/kimi-k2.5-free",
      "temperature": 0.5,
      "skills": ["orchestration", "task-delegation", "context-management"]
    },
    "Oracle": {
      "model": "opencode/glm-4.7-free",
      "temperature": 0.4,
      "skills": ["architecture", "debugging", "design-patterns"]
    },
    "Hephaestus": {
      "model": "opencode/minimax-m2.1-free",
      "temperature": 0.6,
      "skills": [
        "autonomous-execution",
        "deep-research",
        "pattern-matching",
        "legitimate-precision"
      ]
    },
    "FrontendEngineer": {
      "model": "opencode/glm-4.7-free",
      "temperature": 0.5,
      "skills": [
        "ui-ux",
        "frontend-development",
        "responsive-design",
        "accessibility"
      ]
    },
    "Librarian": {
      "model": "opencode/kimi-k2.5-free",
      "temperature": 0.3,
      "skills": ["documentation", "code-search", "research", "knowledge-base"]
    }
  },
  "skills": {
    "self-diagnosis": {
      "path": ".opencode/skills/self-diagnosis.md"
    },
    "pattern-learning": {
      "path": ".opencode/skills/pattern-learning.md"
    },
    "auto-refactor": {
      "path": ".opencode/skills/auto-refactor.md"
    },
    "meta-cognition": {
      "path": ".opencode/skills/meta-cognition.md"
    },
    "optimization": {
      "path": ".opencode/skills/optimization.md"
    },
    "code-analysis": {
      "path": ".opencode/skills/code-analysis.md"
    },
    "debugging": {
      "path": ".opencode/skills/debugging-strategies.md"
    },
    "testing": {
      "path": ".opencode/skills/testing.md"
    },
    "error-patterns": {
      "path": ".opencode/skills/systematic-debugging.md"
    },
    "architecture": {
      "path": ".opencode/skills/backend-models-standards.md"
    },
    "design-patterns": {
      "path": ".opencode/skills/backend-models-standards.md"
    },
    "git-commit-message": {
      "path": ".opencode/skills/git-commit-message.md"
    },
    "context-engineering": {
      "path": ".opencode/skills/context-engineering.md"
    },
    "moai-tool": {
      "path": ".opencode/skills/moai-tool.md"
    },
    "testing-agentic-qe": {
      "path": ".opencode/skills/testing-agentic-qe.md"
    }
  },
  "integrations": {
    "oh-my-opencode": {
      "enabled": true,
      "gemini_auth": false,
      "agents": {
        "frontend-ui-ux-engineer": {
          "model": "opencode/glm-4.7-free"
        },
        "document-writer": {
          "model": "opencode/kimi-k2.5-free"
        },
        "multimodal-looker": {
          "model": "opencode/glm-4.7-free"
        }
      }
    },
    "opencode-antigravity-auth": {
      "enabled": false,
      "note": "Enable if Google OAuth access is available"
    },
    "superpowers": {
      "enabled": true,
      "path": ".opencode/supplements/superpowers"
    },
    "ai-agents-public": {
      "enabled": true,
      "path": ".opencode/supplements/AI-Agents-public"
    },
    "ultra-rag": {
      "enabled": false,
      "note": "Enable for RAG capabilities - requires UltraRAG setup",
      "path": ".opencode/supplements/UltraRAG"
    },
    "moai-adk": {
      "enabled": true,
      "path": ".opencode/supplements/moai-adk"
    }
  },
  "mcp": {
    "servers": [
      {
        "name": "UltraRAG",
        "enabled": false,
        "note": "Enable for RAG capabilities - requires UltraRAG setup"
      }
    ]
  },
  "hooks": {
    "disabled_hooks": []
  },
  "features": {
    "ultrawork": {
      "enabled": true
    },
    "background-agents": {
      "enabled": true,
      "concurrency": {
        "opencode/glm-4.7-free": 3,
        "opencode/kimi-k2.5-free": 3,
        "opencode/minimax-m2.1-free": 2
      }
    },
    "lsp": {
      "enabled": true
    },
    "todo-enforcer": {
      "enabled": true
    },
    "comment-checker": {
      "enabled": true
    }
  }
}
